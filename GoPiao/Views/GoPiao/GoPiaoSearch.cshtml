<link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700,900" rel="stylesheet">
@*<link href="https://cdn.jsdelivr.net/npm/@mdi/font@6.x/css/materialdesignicons.min.css" rel="stylesheet">*@
<link href="https://cdn.jsdelivr.net/npm/vuetify@2.x/dist/vuetify.min.css" rel="stylesheet">
<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no, minimal-ui">


<div id="app">
    <v-app>
        <v-main>
            <v-container>
                <!-- 输入股票代号和查询按钮 -->
                <v-row>
                    <v-col xs12 sm6>
                        <v-text-field v-model="stockSymbol"
                                      label="輸入股票代號(輸入2個(含)以上者，用,隔開)"></v-text-field>
                    </v-col>
                    <v-col xs12 sm6>
                        <v-btn color="primary" v-on:click="searchStock">查詢</v-btn>
                    </v-col>
                </v-row>

                <!-- 数据表 -->
                <v-data-table v-if="dataArray.length > 0"
                              :headers="headers"
                              :items="dataArray"
                              class="elevation-1">
                    <template v-slot:item="{ item }">
                        <tr>
                            <td v-for="(data, index) in item" :key="index">{{ data }}</td>
                            <td>
                                <v-btn color="blue" dark v-on:click="openDialog(item[0])">LOG</v-btn>
                            </td>
                        </tr>
                    </template>
                </v-data-table>
                <div v-else>
                    No stock data available.
                </div>

                <!-- 对话框 -->
                <v-dialog v-model="dialog" max-width="1500">
                    <v-card>
                        <v-card-title class="headline">{{ selectedStock }}</v-card-title>
                        <v-card-text>
                            <!-- 日期选择器 -->
                            <v-row>
                                <v-col xs12 sm6>
                                    <v-menu ref="startMenu"
                                            v-model="startMenu"
                                            :close-on-content-click="false"
                                            :nudge-right="40"
                                            transition="scale-transition"
                                            offset-y
                                            min-width="290px">
                                        <template v-slot:activator="{ on, attrs }">
                                            <v-text-field v-model="startDate"
                                                          label="查詢起日"
                                                          prepend-icon="mdi-calendar"
                                                          readonly
                                                          v-bind="attrs"
                                                          v-on="on"></v-text-field>
                                        </template>
                                        <v-date-picker v-model="startDate" v-on:input="startMenu = false"></v-date-picker>
                                    </v-menu>
                                </v-col>
                                <v-col xs12 sm6>
                                    <v-menu ref="endMenu"
                                            v-model="endMenu"
                                            :close-on-content-click="false"
                                            :nudge-right="40"
                                            transition="scale-transition"
                                            offset-y
                                            min-width="290px">
                                        <template v-slot:activator="{ on, attrs }">
                                            <v-text-field v-model="endDate"
                                                          label="查詢迄日"
                                                          prepend-icon="mdi-calendar"
                                                          readonly
                                                          v-bind="attrs"
                                                          v-on="on"></v-text-field>
                                        </template>
                                        <v-date-picker v-model="endDate" v-on:input="endMenu = false"></v-date-picker>
                                    </v-menu>
                                </v-col>
                            </v-row>
                        </v-card-text>

                        <!-- 错误信息 -->
                        <v-alert v-if="errorMessage" type="error" dismissible>{{ errorMessage }}</v-alert>

                        <!-- LOG 数据表 -->
                        <v-data-table v-if="dataTableVisible"
                                      :headers="headers_log"
                                      :items="dataArray1"
                                      class="elevation-1"
                                      fixed-header
                                      height="400px">
                            <template v-slot:item="{ item }">
                                <tr>
                                    <td>{{ item[0] }}</td>  <!-- 日期 -->
                                    <td>{{ item[3] }}</td>  <!-- 开盘价 -->
                                    <td>{{ item[4] }}</td>  <!-- 最高价 -->
                                    <td>{{ item[5] }}</td>  <!-- 最低价 -->
                                    <td>{{ item[6] }}</td>  <!-- 收盘价 -->
                                    <td>{{ item[7] }}</td>  <!-- 涨跌价差 -->
                                    <td>{{ item[8] }}</td>  <!-- 成交笔数 -->
                                </tr>
                            </template>
                        </v-data-table>

                        <!-- 对话框按钮 -->
                        <v-card-actions>
                            <v-btn color="blue darken-1" text v-on:click="closeDialog">關閉</v-btn>
                            <v-btn color="blue darken-1" text v-on:click="validateDates">查詢</v-btn>
                        </v-card-actions>
                    </v-card>
                </v-dialog>
            </v-container>
        </v-main>
    </v-app>
</div>

<script src="https://cdn.jsdelivr.net/npm/vue@2.x/dist/vue.js"></script>
<script src="https://cdn.jsdelivr.net/npm/vuetify@2.x/dist/vuetify.js"></script>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

<script>
    new Vue({
        el: '#app',
        vuetify: new Vuetify(),
        data() {
            return {
                stockSymbol: '', // 存放输入的股票代号
                dataArray: [],  // 存放后端返回的API数据
                dataArray1: [],  // 存放后端返回的LOG数据
                dialog: false,
                selectedStock: '',
                startDate: '',
                endDate: '',
                startMenu: false,
                endMenu: false,
                dataTableVisible: false,
                errorMessage: '', // 存储错误信息
                headers: [
                    { text: '股票代號', value: 'code' },
                    { text: '公司名稱', value: 'company' },
                    { text: '開盤價', value: 'open' },
                    { text: '最高價', value: 'high' },
                    { text: '最低價', value: 'low' },
                    { text: '成交價', value: 'final' },
                    { text: '賣價', value: 'sell' },
                    { text: '買價', value: 'bid' },
                    { text: '紀錄', value: 'log' }
                ],
                headers_log: [
                    { text: '日期', value: 'date' },
                    { text: '開盤價', value: 'open' },
                    { text: '最高價', value: 'high' },
                    { text: '最低價', value: 'low' },
                    { text: '收盤價', value: 'final' },
                    { text: '漲跌價差', value: 'sell' },
                    { text: '成交筆數', value: 'bid' }
                ],
            }
        },
        methods: {
            // 搜索股票
            async searchStock() {
                const symbols1 = this.stockSymbol;
                const url = `/GoPiao/GetRealtimePrice?symbols1=${symbols1}`;
                try {
                    const response = await axios.get(url);
                    this.dataArray = response.data;
                } catch (error) {
                    console.error('Error fetching stock data:', error);
                }
            },
            // 打开对话框
            openDialog(stockCode) {
                this.selectedStock = stockCode;
                this.dataTableVisible = false;
                this.dialog = true;
            },
            // 关闭对话框
            closeDialog() {
                this.dialog = false;
            },
            // 验证日期并查询数据
            async validateDates() {
                this.errorMessage = '';
                if (new Date(this.endDate) <= new Date(this.startDate)) {
                    this.errorMessage = '查詢迄日必須大於查詢起日';
                    return;
                }

                const symbols1 = this.selectedStock;
                const url = `/GoPiao/GetMonthPrice?symbols1=${symbols1}&startdate=${this.startDate}&enddate=${this.endDate}`;

                try {
                    const response = await axios.get(url);
                    this.dataArray1 = response.data;
                    this.dataTableVisible = true;
                } catch (error) {
                    console.error('Error fetching stock data:', error);
                    this.errorMessage = '獲取數據時出錯，請稍後重試。';
                    this.dataArray1 = [];
                    this.dataTableVisible = false;
                }
            }
        }
    })
</script>